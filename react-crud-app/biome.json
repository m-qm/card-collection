{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "suspicious": {
          "noExplicitAny": "warn"
        },
        "style": {
          "noNonNullAssertion": "warn",
          "useImportType": "off",
          "useDefaultParameterLast": "off"
        }
      },
      "ignore": [
        "**/*decorator*",
        "**/*.decorator.*"
      ]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "ignore": []
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "always"
      },
      "parser": {
        "unsafeParameterDecoratorsEnabled": true
      }
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
    }
  }